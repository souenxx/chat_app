<% if current_user.id == message.user_id %>
  <div class="mycomment">
    <p><%= message.content %></p>
  </div>
<% else %>
  <div class="balloon6">
    <div class="faceicon">
      <!--<img src="/images/kid.png" alt="kidicon">
      <div class="icon">-->
      <%= image_tag message.user.picture.url %>
    </div>
    <div class="chatting">
      <div class="saysname"><%= message.user.name %></div>
      <div class="says">
        <p><%= message.content %></p>
      </div>
    </div>
  </div>
<% end %>
